<div class="container">
    <div class="row">
        <div class="col-md-12 , text-center">
            <img src="https://media.giphy.com/media/10eqvP7UGR34TC/giphy.gif" alt="Munching on those burgers"
                width="200" height="200">
            <h3>Eat-That-Burger Baby</h3>
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-md-6 , text-center">
            <h4>Burgers ready for pick-up</h4>
            <img src="https://media.giphy.com/media/zNsrnGVpCJMOc/giphy.gif" alt="Enjoy your burger" width="200"
                height="200">
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn btn-primary" type="submit">Let's Get Eating!</button>
                    </form>

                    <form action="/{{this.id}}?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                    </form>

                    {{/unless}}
                    {{/each}}
            </ul>
        </div>

        <div class="col-md-6 , text-center">
            <h4>Burgers that have been ordered</h4>
            <img src="https://media.giphy.com/media/XbAYSN0jUBQbe/giphy.gif" alt="Eat them all" width="200"
                height="200">
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <hr>

    <div class="row , text-center">
        <div class="col-md-12">
            <h3>Add a Burger</h3>
            <img src="https://media.giphy.com/media/ud6EmjRF8CICI/giphy.gif" alt="Make that burger" width="200"
                height="200">

            <form class="update-form" action="/" method="POST">
                <div class="form-group">
                    <p>Enter a burger you want to order and the click the submit button when you made your choice</p>
                </div>
                <input type="text" id="burger-order"><br><br>
                <button type="submit" class="btn btn-primary">Submit Your Order</button>
            </form>
        </div>
    </div><br>

    <footer class="jumbotron , text-center">
        <h3>Â© 2019 Alexander Rocha</h3>
    </footer>

</div>